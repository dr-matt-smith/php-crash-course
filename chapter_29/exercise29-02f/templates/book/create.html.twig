{% extends 'base.html.twig' %}

{% block title %}create BOOK page{% endblock %}

{% block main %}
    <h1>Create NEW Book page</h1>

    <form method="POST" action="/?action=processCreate">
        <p>
            Author:
            <input name="author">
        </p>
        <p>
            Title:
            <input name="title">
        </p>
        <p>
            Price:
            <input name="price" type="number" min="0" step="0.01">
        </p>
        <input type="submit">
    </form>
{% endblock %}
